{
  "$jason": {
    "head": {
      "title": "Selective URL handling",
      "description": "By attaching an action called 'visit' and observing the $jason.url value, we can selectively trigger different actions depending on the clicked URL. In this case the browser demonstrates a regular behavior when you click the top menu items, but does a native $href transition if you click any other link",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "visit": [
          {
            "{{#if /\\/(menus|about|specialsblog|gallery|contact|submit)$/.test($jason.url) }}": {
              "type": "$default"
            }
          },
          {
            "{{#else}}": {
              "type": "$href",
              "options": {
                "url": "https://jasonette.github.io/Jasonpedia/webcontainer/agent/hijack.json",
                "preload": {
                  "background": "#ffffff"
                },
                "options": {
                  "url": "{{$jason.url}}"
                }
              }
            }
          }
        ]
      },
      "templates": {
        "body": {
          "header": {
            "type": "image", 
            "url": "http://chiantirichmond.com/images/pasted-svg-277x118.svg"
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "rgba(255,255,255,0.8)",
                "color": "#009efa"
              },
              "items": [{
                "image": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home-2-fill-grey.png",
                "text": "Home",
                "style": {
                  "height": "21"
                },
                "url": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home.json"
              }, {
                "image": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/restaurant-fill-grey.png",
                "text": "Menu",
                "style": {
                  "height": "21"
                },
                "url": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home.json"
              }, {
                "image": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/gallery-fill-grey.png",
                "text": "Gallery",
                "style": {
                  "height": "21"
                },
                "url": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home.json"
              }, {
                "image": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/phone-fill-grey.png",
                "text": "Contact",
                "style": {
                  "height": "21"
                },
                "url": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home.json"
              }, {
                "image": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/team-fill-grey.png",
                "text": "About",
                "style": {
                  "height": "21"
                },
                "url": "https://raw.githubusercontent.com/strangepy/json/master/restaurant/home.json"
              }]
            }
          },
          "background": {
            "type": "html",
            "url": "{{'url' in $params ? $params.url : 'http://chiantirichmond.com/'}}",
            "action": {
              "trigger": "visit"
            }
          }
        }
      }
    }
  }
}
