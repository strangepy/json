{
  "$jason": {
    "head": {
      "title": "strangePy Blog",
      "description": "Shows latest blog posts from strangePy",
      "icon": "https://raw.githubusercontent.com/strangepy/strangepy-fork/master/favicon.ico",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        }
      },
      "actions": {
        "$pull": {
          "trigger": "reload"
        },
        "$load": {
          "trigger": "reload"
        },
        "reload": {
          "type": "$network.request",
          "options": {
            "url": "https://www.strangepy.com/",
            "dataType": "html"
          },
          "success": {
            "type": "$render",
            "options": {
              "type": "html",
              "data": "{{$jason}}"
            }
          }
        }
      },
      "templates": {
        "body": {
          "sections": [
            {
              "items": {
                "{{#each $jason.find('article.post-preview')}}": {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "label",
                      "text": "{{$(this).find('post-title').text()}}"
                    },
                    {
                      "type": "label",
                      "text": "{{$(this).find('post-subtitle').text()}}"
                    },
                    {
                      "type": "label", 
                      "text": "{{$(this).find('p.post-meta').text()}}"
                    },
                    {
                      "type": "image",
                      "url": "https://www.strangepy.com/ + {{$(this).find('img').attr('src')}}", 
                      "style": {
                        "width": "50",
                        "height": "50",
                        "corner_radius": "25"
                      }
                    },
                    {
                      "type": "label", 
                      "text": "{{$(this).find('div.post-entry').text()}}"
                    }, 
                    {
                      "type": "web",
                      "style": {
                        "height": "300", 
                      },
                      "text": "{{var test = document.querySelector('article.post-preview').innerHTML; return '<html><body>'+test+'</body></html>';}}"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
